<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/edittext_background"
    android:layout_margin="8dp"
    >

    <ImageView
        android:id="@+id/recyclerGeziKucukGorsel"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="Gezi fotoğrafı"
        android:background="@drawable/gezi_arkaplan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/recyclerGeziAdi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gezi Adı"
        android:textSize="22sp"
        android:textStyle="italic"
        android:textColor="#222"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerGeziKucukGorsel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
